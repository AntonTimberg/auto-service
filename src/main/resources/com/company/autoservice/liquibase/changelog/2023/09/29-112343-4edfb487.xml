<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="auto-service">
        <createIndex indexName="IDX_ORDER__CLIENT" tableName="ORDER_">
            <column name="CLIENT_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="CLIENT_ID" baseTableName="ORDER_" constraintName="FK_ORDER__ON_CLIENT"
                                 referencedColumnNames="ID" referencedTableName="USER_"/>
    </changeSet>
    <changeSet id="2" author="auto-service">
        <createIndex indexName="IDX_ORDER__MECHANIC" tableName="ORDER_">
            <column name="MECHANIC_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="MECHANIC_ID" baseTableName="ORDER_"
                                 constraintName="FK_ORDER__ON_MECHANIC" referencedColumnNames="ID"
                                 referencedTableName="USER_"/>
    </changeSet>
    <changeSet id="3" author="auto-service">
        <addNotNullConstraint columnDataType="INT" columnName="STATUS" tableName="USER_" validate="true"/>
    </changeSet>
</databaseChangeLog>